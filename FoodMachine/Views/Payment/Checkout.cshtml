@model Food.Dal.Models.Payment.CheckoutViewModel;
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="/">Home</a></p>
            <p class="m-0 px-2">-</p> <p class="m-0">Checkout</p>
        </div>
    </div>
</div>
<div class="container-fluid pt-5">
    <form method="post" asp-route="">
        @Html.AntiForgeryToken()
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.FirstName" placeholder="First Name" />
                        <span asp-validation-for="Checkouts.FirstName" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.LastName" placeholder="Last Name" />
                        <span asp-validation-for="Checkouts.LastName" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.Email" placeholder="Email" />
                        <span asp-validation-for="Checkouts.Email" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.MobilNumber" placeholder="Mobile No" />
                        <span asp-validation-for="Checkouts.MobilNumber" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.Address" placeholder="Address" />
                        <span asp-validation-for="Checkouts.Address" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.City" placeholder="City" />
                        <span asp-validation-for="Checkouts.City" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.Country" placeholder="Country" />
                        <span asp-validation-for="Checkouts.Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <input class="form-control" asp-for="Checkouts.State" placeholder="State" />
                        <span asp-validation-for="Checkouts.State" class="text-danger"></span>
                    </div>
                   
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        @foreach (var item in Model.Products)
                        {
                            <div class="d-flex justify-content-between"> <p>@item.Name</p> <p>$@item.Price</p> </div>
                        }
                        <hr class="mt-0" />
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">$@Model.Subtotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$@Model.Shipping</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5> <h5 class="font-weight-bold">$@Model.Total</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" asp-for="Checkouts.PaymentMethod" value="Paypal" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                                <span asp-validation-for="Checkouts.PaymentMethod" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" asp-for="Checkouts.PaymentMethod" value="DirectCheck" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                                <span asp-validation-for="Checkouts.PaymentMethod" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" asp-for="Checkouts.PaymentMethod" value="BankTransfer" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                                <span asp-validation-for="Checkouts.PaymentMethod" class="text-danger"></span>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <button type="submit" class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>