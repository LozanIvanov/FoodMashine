@model Food.Dal.Models.Admin.ProductViewModel
   @{
    Layout = "~/Views/SharedAdmin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <a href="/Admin/Products/Create" class="btn btn-info">Add new product</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        Description
                    </td>
                    <td>
                        Quantity
                    </td>
                    <td>
                        Price
                    </td>
                    <td>
                        Image
                    </td>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.ListProducts)
                {
                    <tr>
                        <td>
                            @product.Name
                        </td>
                        <td>
                            @product.Discription
                        </td>
                        <td>
                            @product.Quantity
                        </td>
                        <td>
                            @product.Price
                        </td>
                        <td>
                            @if (product.MainImage != null)
                            {
                                <img class="table-image" width=45px height=35px src="/img/products/@product.MainImage" />
                            }
                        </td>

                        <td>
                            <a href="/Admin/Products/Edit/@product.Id" class="btn btn-info">Edit</a>
                            <a href="/Admin/Products/Delete/@product.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>

            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {

                <a @(i == Model.CurrentPage ? "style=color:red;":"") href="/Admin/Products?page=@i">@i</a>

            }
            <a class="page-link" href="/Admin/Products?page=i" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
